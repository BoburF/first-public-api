{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "outDir": "build",
    "declaration": false,
    "skipLibCheck": false,
    "newLine": "lf",
    "lib": [
      "es2017",
    ],
    "types": [
      "node",
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}